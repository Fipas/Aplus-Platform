.navbar-right(ng-controller="apNavBarLoginCtrl")
    form.navbar-form(ng-hide="identity.isAuthenticated()")
        ul.nav.navbar-nav
            li
                a(href="/signup") Cadastrar
        .form-group
            input.form-control(placeholder="Usu√°rio", ng-model="username")
        .form-group
            input.form-control(type="password", placeholder="Senha", ng-model="password")
        button.btn.btn-primary(ng-click="signin(username, password)") Entrar
    ul.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
        li.dropdown
            a.dropdown-toggle(href="", data-toggle="dropdown")
                | {{identity.currentUser.firstName + " " + identity.currentUser.lastName}}
                b.caret
            ul.dropdown-menu
                li(ng-show="identity.currentUser.isAdmin()")
                    a(href="/admin/users") Admin
                li
                    a(href="", ng-click="signout()") Sair
